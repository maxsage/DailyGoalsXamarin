<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="DailyGoals.Today">
    <ContentPage.Content>
        <StackLayout>
            <ContentView Padding="10" BackgroundColor="LightBlue">
                <Label Text="{Binding CurrentDate, StringFormat='Today - {0}'}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"  VerticalOptions="Start" />
            </ContentView>
            <ListView x:Name="goalEntriesListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding GoalName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>