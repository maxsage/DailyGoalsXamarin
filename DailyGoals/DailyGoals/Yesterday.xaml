<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="DailyGoals.Yesterday"
             Title="Yesterday">
    <ContentPage.Content>
        <StackLayout>
            <ContentView Padding="10" BackgroundColor="LightBlue">
                <Label Text="{Binding CurrentDate, StringFormat='Yesterday - {0}'}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"  VerticalOptions="Start" />    
            </ContentView>
            
        </StackLayout>
